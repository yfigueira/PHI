<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="yfp">
        <createTable tableName="friend">
            <column name="id" type="uuid">
                <constraints primaryKey="true" />
            </column>
            <column name="version" type="bigint" />
            <column name="user_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_f_user" references="users(id)" />
            </column>
            <column name="friend_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_f_friend" references="users(id)" />
            </column>
            <column name="created_at" type="timestamp" />
            <column name="updated_at" type="timestamp" />
        </createTable>
        <addUniqueConstraint tableName="friend" columnNames="user_id, friend_id" />
    </changeSet>

    <changeSet id="2" author="yfp">
        <createProcedure>
            create trigger tr_update_audit_columns_friend
                before insert or update on friend
                    for each row execute function update_audit_columns();
        </createProcedure>
    </changeSet>
</databaseChangeLog>